@Model IEnumerable<EmployeeViewModel>
@if (Model != null)
            {
                <table class="table table-sm table-striped table-bordered m-2" >
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Salary</th>
                            <th>Age</th>
                            <th>Year of birth</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model)
                        {
                            <tr>
                                <td>@r.Id</td>
                                <td>@r.Name</td>
                                <td>@r.Salary</td>
                                <td>@r.Age</td>
                                <td>@r.Year of birth</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }